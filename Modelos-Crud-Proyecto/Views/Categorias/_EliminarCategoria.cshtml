
@model Categoria

<div class="modal" tabindex="-1" id="EliminarCat">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Desea Eliminar esta Categoria ?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="CategoriaID" />
                    <input id="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <div class="card-body">
                        <p><strong>@Html.DisplayNameFor(model => model.Nombre):</strong>&nbsp; &nbsp; @Html.DisplayFor(model => model.Nombre)</p>
                        <p><strong>@Html.DisplayNameFor(model => model.Descripcion):</strong>&nbsp; &nbsp;@Html.DisplayFor(model => model.Descripcion)</p>
                        <p><strong>@Html.DisplayNameFor(model => model.Estado):</strong> &nbsp; &nbsp; @Html.DisplayFor(model => model.Estado)</p>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-danger" data-save="modal">Eliminar</button>
            </div>
        </div>
    </div>
</div>
