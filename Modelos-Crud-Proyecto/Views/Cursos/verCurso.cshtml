@model Curso
<div class="modal" tabindex="-1" id="VerCurso">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Curso</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card-body">
                    <p><strong>@Html.DisplayNameFor(model => model.Nombre):</strong>&nbsp; &nbsp; @Html.DisplayFor(model => model.Nombre)</p>
                    <p><strong>@Html.DisplayNameFor(model => model.Descripcion):</strong>&nbsp; &nbsp;@Html.DisplayFor(model => model.Descripcion)</p>
                    <p><strong>@Html.DisplayNameFor(model => model.Creditos):</strong>&nbsp; &nbsp;@Html.DisplayFor(model => model.Creditos)</p>
                    <p><strong>@Html.DisplayNameFor(model => model.Horas):</strong>&nbsp; &nbsp;@Html.DisplayFor(model => model.Horas)</p>
                    <p><strong>@Html.DisplayNameFor(model => model.Costo):</strong>&nbsp; &nbsp;$@Html.DisplayFor(model => model.Costo)</p>
                    <p><strong>@Html.DisplayNameFor(model => model.Estado):</strong> &nbsp; &nbsp; @Html.DisplayFor(model => model.Estado)</p>
                    <p><strong>@Html.DisplayNameFor(model => model.categoria):</strong> &nbsp; &nbsp;@Html.DisplayFor(model => model.categoria.Nombre)</p>
                </div>
            </div>
        </div>
    </div>
</div>
