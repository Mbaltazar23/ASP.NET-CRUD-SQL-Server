
@model Estudiante

<div class="modal" tabindex="-1" id="QuitarEstudiante">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Desea Eliminar a este Estudiante ?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="ID" />
                    <input id="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <div class="card-body">
                        <p><strong>@Html.DisplayNameFor(model => model.Codigo):</strong>&nbsp; &nbsp; @Html.DisplayFor(model => model.Codigo)</p>
                        <p><strong>@Html.DisplayNameFor(model => model.persona.Nombres):</strong>&nbsp; &nbsp;@Html.DisplayFor(model => model.persona.Nombres)</p>
                        <p><strong>@Html.DisplayNameFor(model => model.persona.Apellidos):</strong> &nbsp; &nbsp; @Html.DisplayFor(model => model.persona.Apellidos)</p>
                        <p><strong>@Html.DisplayNameFor(model => model.persona.Email):</strong> &nbsp; &nbsp; @Html.DisplayFor(model => model.persona.Email)</p>
                    </div>
                </form>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger" data-save="modal">Eliminar</button>
                </div>
            </div>
        </div>
    </div>
</div>
