@model Asignacion

<div class="modal" tabindex="-1" id="VerAsignacion">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Asignacion</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card-body">
                    <p><strong>@Html.DisplayNameFor(model => model.Fecha):</strong>&nbsp; &nbsp; @Html.DisplayFor(model => model.Fecha)</p>
                    <p><strong>Descripcion del Curso :</strong>&nbsp; &nbsp;@Html.DisplayFor(model => model.curso.Descripcion)</p>
                    <p><strong>Nombre del Instructor :</strong>&nbsp; &nbsp;@Html.DisplayFor(model => model.instructor.persona.Nombres)</p>
                    <p><strong>@Html.DisplayNameFor(model => model.instructor.Especialidad):</strong> &nbsp; &nbsp; @Html.DisplayFor(model => model.instructor.Especialidad)</p>
                </div>
            </div>
        </div>
    </div>
</div>


